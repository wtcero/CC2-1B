rows = 5
for i in range(1, rows + 1):
    for j in range(1, i + 1):
        print(j, end=' ')
    print('')
    
print ('===============')

num_input = int(input("Enter the number of rows: "))
sum = 0

for i in range(1, num_input + 1):
    sum = sum + i
    print(sum)
    

print ('===============')

rows = 5
for i in range(rows, 1, -1):
    for j in range(1, i + 1):
        print(j, end=' ')
    print("\r")